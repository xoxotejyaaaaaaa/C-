#include <iostream>
using namespace std;

int main() {
    int x = 10;

    // Simple if statement
    if (x > 5) {
        cout << "x is greater than 5" << endl;
    }

    // if-else statement
    if (x > 15) {
        cout << "x is greater than 15" << endl;
    } else {
        cout << "x is not greater than 15" << endl;
    }

    // Nested if-else statement
    if (x > 5) {
        if (x < 15) {
            cout << "x is between 5 and 15" << endl;
        } else {
            cout << "x is greater than or equal to 15" << endl;
        }
    }

    return 0;
}
